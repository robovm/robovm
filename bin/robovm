#!/bin/bash

BASE=$(cd "$(dirname "$0")/.."; pwd -P)
COMPILER_JAR="$BASE/lib/robovm-dist-compiler.jar"
if [ -f "$COMPILER_JAR" ]; then
    export ROBOVM_HOME="$BASE"
else
    if [ "x$ROBOVM_DEV_ROOT" != 'x' ]; then
#        COMPILER_JAR=$(ls "$ROBOVM_DEV_ROOT"/../robovm-dist/compiler/target/robovm-dist-compiler-*-nodep.jar 2> /dev/null)
        COMPILER_JAR=$(ls "$ROBOVM_DEV_ROOT"/../robovm-dist/compiler/target/robovm-dist-compiler-*-*.jar 2> /dev/null)
    fi
fi
if [ ! -f "$COMPILER_JAR" ]; then
  echo "robovm-dist-compiler.jar not found"
  exit 1
fi

java \
    -XX:+HeapDumpOnOutOfMemoryError \
    -Xmx2g \
    -Xss1024k \
    -jar "$COMPILER_JAR" \
    "$@"
