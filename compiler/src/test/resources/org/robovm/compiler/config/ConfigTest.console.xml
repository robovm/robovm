<config>
  <os>macosx</os>
  <arch>x86</arch>
  <forceLinkClasses>
    <pattern>javax.**.*</pattern>
  </forceLinkClasses>
  <libs>
    <lib>dl</lib>
    <lib>libs/libmy.a</lib>
    <lib>libs/foo.o</lib>
    <lib>/usr/lib/libbar.a</lib>
  </libs>
  <frameworks>
    <framework>Foundation</framework>
    <framework>AppKit</framework>
  </frameworks>
  <resources>
    <resource>resources</resource>
    <resource>/usr/share/resources</resource>
    <resource>
      <includes>
        <include>data/**/*</include>
      </includes>
    </resource>
    <resource>
      <includes>
        <include>videos/**/*.avi</include>
      </includes>
    </resource>
    <resource>
      <targetPath>data</targetPath>
      <directory>resources</directory>
      <includes>
        <include>**/*.png</include>
      </includes>
      <excludes>
        <exclude>**/foo.png</exclude>
      </excludes>
      <flatten>true</flatten>
    </resource>
  </resources>
  <classpath>
    <classpathentry>foo1.jar</classpathentry>
    <classpathentry>/tmp/foo2.jar</classpathentry>
  </classpath>
</config>